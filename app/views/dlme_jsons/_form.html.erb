<%= bootstrap_form_for([current_exhibit, @resource.becomes(DlmeJson)],
                       layout: :vertical,
                       label_col: 'col-md-2',
                       control_col: 'col-sm-6 col-md-6 col-lg-8',
                       html: { class: 'item-upload-form', multipart: true } ) do |f| %>
  <%= f.fields_for :data do |d| %>
    <%= d.text_area :json, hide_label: true, style: 'height: 50vh' %>
  <% end %>
  <div class="form-actions">
    <div class="primary-actions">
      <%= cancel_link @resource, :back, class: 'btn btn-secondary' %>
      <%= f.submit t('.add_item'), class: 'btn btn-primary' %>
    </div>
  </div>
<% end if Settings.feature_flags.allow_json_upload %>
